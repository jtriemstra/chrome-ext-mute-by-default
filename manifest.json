{
  "manifest_version": 2,

  "name": "Mute By Default",
  "description": "This extension allows the user to mute tabs, except for specified domains.",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
	"tabs"
  ]
}